<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/curved_small_background"
    android:backgroundTint="@color/primary_second_color"
    android:layout_marginEnd="16dp">
    <Button
        android:id="@+id/btnShowMember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_people"
        app:iconTint="@color/primary_icon_second_color"
        android:text="Show member"
        android:textColor="@color/primary_word_second_color"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:background="@color/transparent"
        android:backgroundTint="@color/transparent"/>
    <Button
        android:id="@+id/btnAddMember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_add_person"
        app:iconTint="@color/primary_icon_second_color"
        android:text="Add member"
        android:textColor="@color/primary_icon_second_color"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:background="@color/transparent"/>
    <Button
        android:id="@+id/btnRenameProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_rename"
        app:iconTint="@color/primary_icon_second_color"
        android:text="Rename project"
        android:textColor="@color/primary_word_second_color"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:background="@color/transparent"/>

    <Button
        android:id="@+id/btnAdminSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_admin"
        app:iconTint="@color/primary_icon_second_color"
        android:text="Admin Setting"
        android:textColor="@color/primary_word_second_color"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:background="@color/transparent"/>
    <Button
        android:id="@+id/btnActivityLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_history"
        android:drawableTint="@color/primary_icon_second_color"
        android:text="Activity Log"
        android:textColor="@color/primary_word_second_color"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:background="@color/transparent"/>
    <Button
        android:id="@+id/btnDeleteProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_delete_24"
        android:drawableTint="@color/primary_icon_second_color"
        android:text="Delete project"
        android:textColor="@color/primary_word_second_color"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:background="@color/transparent"/>
</LinearLayout>